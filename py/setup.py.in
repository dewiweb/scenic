#!/usr/bin/env python
"""
MidiStream Installation script
-------------------

Usage::
  python setup.py build
  sudo python setup.py install --prefix=/usr/local

For developpers::
  sudo python setup.py develop --prefix=/usr/local
  sudo python setup.py develop --prefix=/usr/local --uninstall

For distribution packages::
  python setup.py bdist
  python setup.py bdist_egg
"""
from setuptools import find_packages
from setuptools import setup

# this comes from autoconf
__version__ = '''@PACKAGE_VERSION@'''

scenic_packages = [
    'rtpmidi',
    'rtpmidi.protocols',
    'rtpmidi.protocols.rtp',
    'rtpmidi.engines',
    'rtpmidi.engines.midi',
    ]

setup(
    name = "scenic",
    version = __version__,
    author = "SAT",
    author_email = "info@sat.qc.ca",
    url = "http://www.sat.qc.ca",
    description = "MidiStream",
    long_description = """MidiStream software, a component of the Scenic project
    Requires: twisted.""",
    install_requires = [], 
    # The dependency to the 'nevow' package is not specified here, since there is a bug 
    # in nevow, which installs it using easy_install even when the nevow ubuntu package is already installed. 
    # see http://bugs.debian.org/cgi-bin/bugreport.cgi?bug=475440
    # we removed twisted as well, since we prefer the user to install it himself.
    scripts = ["midistream"],
    license = "GPL",
    platforms = ["any"],
    zip_safe = False,
    packages = scenic_packages,
    # FIXME: don't need all these filename extensions
    package_data = {
        "":["*.rst", "*.png", "*.jpg", "*.css", "*.js", "*.xml", '*.txt', 'off']
    }
    )
