<div xmlns:n="http://nevow.com/ns/nevow/0.1"
    xmlns:athena="http://divmod.org/ns/athena/0.7"
    n:render="liveFragment">
    <table id="strm_table">
    <tr><td>
	<h3 n:render="i18n">Streams</h3>
	<input type="button" id="strm_start" value="Start" class="js_help button" disabled="true"></input>
	<span id="strm_presets" n:render="i18n">Presets:</span>
    <span>
	<select id="strm_global_setts" disabled="disabled">
		<option n:render="i18n">No settings loaded</option>
	</select>
    </span>
    </td><td>
    <span id="strm_details"></span>
	</td></tr></table>
	<!-- Help strings -->
	<span n:render="i18n" id="help_strm_start" class="help_str" url="streams#start">Start to stream the audio/video/data.</span>

	<!-- Javascript translation -->
	<span n:render="i18n" id="js_strm_start" class="strm js_str">Start</span>
	<span n:render="i18n" id="js_strm_stop" class="strm js_str">Stop</span>
	<span n:render="i18n" id="js_strm_user" class="strm js_str">User settings</span>
	<span n:render="i18n" id="js_strm_preset" class="strm js_str">Preset settings</span>
</div>
