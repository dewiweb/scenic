<div xmlns:n="http://nevow.com/ns/nevow/0.1"
    xmlns:athena="http://divmod.org/ns/athena/0.7"
    n:render="liveFragment">
    <!-- The actual HTML template -->
    <br />
	<h3 n:render="i18n">Network Testing</h3>
    <div id="nettest" style="border:1px dotted #999;">
        <table style="width:100%; padding:10px; font-size:11px;">
            <tr>
                <td align="right">Bandwidth: </td>
                <td><input type="text" id="nettest_bandwidth" value="10" style="width: 50px;text-align: right;font-size:11px;" /> <select style="font-size:11px; width: 80px;" id="nettest_unit">
                <option selected="true" value="M">Mbps</option>
                <option value="K">Kbps</option>
                </select></td>
            </tr>
            <tr>
                <td align="right">Test duration: </td>
                <td><input type="text" id="nettest_duration" value="10"  style="width: 40px;text-align: right;font-size:11px;" /> seconds</td>
            </tr>
            <tr>
                <td align="right">Mode:</td>
                <td>
                    <select style="font-size:11px;width: 140px;" id="nettest_kind">
                        <option value="localtoremote">from local to remote</option>
                        <option value="remotetolocal">from remote to local</option>
                        <option value="tradeoff">bidirectionnal sequential</option>
                        <option value="dualtest" selected="true">bidirectional simultaneous</option>
                    </select>
                </td>
            </tr>
            <tr>
                <td>
                    <!-- start button -->
                    <input type="button" id="nettest_start" value="Start" class="js_help button" disabled="true"></input>
                </td>
            </tr>
            <!-- TODO: use this tr span -->
            <!--
            <tr>
                <td colspan="2" style="font-size:10px;color:#555;">
                    <span id="nettest_stats" style="visibility:hidden;float:left;">
                        <img src="img/macthrob-small.png" style="position:relative;top:4px;" /> 
                        Testing from local to remote
                    </span>
                </td>
            </tr>
            -->
        </table>
        <div style="border-top: 1px dotted #999;padding: 5px;font-size:11px" id="net_results">
            <!-- <b style="font-size:12px;">Results</b><br />-->
            <!-- Packet Lost: 0,02 %<br />
            Jitter: 3 ms<br />
            Bandwidth: 2533 Mbps<br />
            Latency: 2 ms</div> -->
            <!-- MESSAGE -->
            <div id="nettest_message" style="text-size:smaller;">
                No test results.
            </div> <!-- We display the results here. -->
        </div>
	</div>

    <!-- ####################### -->
	<!-- Help strings -->
	<span n:render="i18n" id="help_nettest_start" class="help_str" url="nettest#start">Starts a network performance test with a contact to which we are currently connected.</span>

	<!-- Javascript translation -->
	<span n:render="i18n" id="js_nettest_start" class="nettest js_str">Start</span>
	<span n:render="i18n" id="js_nettest_stop" class="nettest js_str">Stop</span>
	<span n:render="i18n" id="js_nettest_bandwidth" class="nettest js_str">Bandwidth</span>
	<span n:render="i18n" id="js_nettest_duration" class="nettest js_str">Duration</span>
	<span n:render="i18n" id="js_nettest_mode" class="nettest js_str">Mode</span>
</div>
