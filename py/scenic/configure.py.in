APPNAME = "scenic"
VERSION = """@PACKAGE_VERSION@"""

import os
from scenic import data
# contains the glade files and pixmaps
# TODO: change this for a autoconf variable
PKGDATADIR = os.path.dirname(data.__file__) # Typically /usr/local/share/scenic
# not used yet. Will contain custom icons. 
SCENIC_LOCALE_DIR = """@SCENIC_LOCALE_DIR@""" # Typically /usr/local/share/po
PACKAGE_NAME = """@PACKAGE_NAME@""" # scenic
# contains the gtkrc themes:
# TODO: change this for a autoconf variable
THEMES_DIR = PKGDATADIR 

def replace_install_paths_with_devel_paths():
    """
    If the application is not installed, overrides the constants in this file with the uninstalled location of these directories.
    Called from the main executable.
    """
    # if in development mode, override the path to gettext i18n files.
    this_dir = os.path.dirname(os.path.abspath(__file__)) # trunk/py/scenic/
    root = os.path.split(os.path.split(this_dir)[0])[0] # trunk
    py_scenic_data_dir = os.path.join(this_dir, 'data') # trunk/py/scenic/data
    # not, override the constants:
    SCENIC_LOCALE_DIR = os.path.join(root, "po") # trunk/po
    PKGDATADIR = py_scenic_data_dir 
    THEMES_DIR = PKGDATADIR
