<div xmlns:n="http://nevow.com/ns/nevow/0.1"
    xmlns:athena="http://divmod.org/ns/athena/0.7"
    n:render="liveFragment">
	<h3 n:render="i18n">Connections</h3>
	<div class="section">
		<ul class="js_help" id="adb_list">
			<li><div class="conn_icon"></div><div class="conn_icon"></div>Test</li>
		</ul>
		<h3><athena:handler event="onclick" handler="add" /><span class="js_help" id="adb_add"></span> <span id="adb_remove">-</span></h3>
		<table id="adb_fields">
			<tr>
				<td>Name: </td>
				<td><input id="adb_name" type="text" disabled="true" /></td>
			</tr>
			<tr>
				<td>Address: </td>
				<td><input id="adb_address" type="text" disabled="true" /></td>
			</tr>
			<tr>
				<td>Port: </td>
				<td><input id="adb_port" type="text" disabled="true" /></td>
			</tr>
			<tr>
				<td></td>
				<td><athena:handler event="onclick" handler="editSave" /><input id="adb_edit" disabled="true" type="button" value="Edit" /></td>
			</tr>
		</table>
	</div>

	<!-- Help strings -->
	<span n:render="i18n" id="help_adb_list" class="help_str" url="addressbook#list">This the list of the <i>contacts</i></span>
	<span n:render="i18n" id="help_adb_add" class="help_str" url="addressbook#add">Add a new contact to the list</span>

	<!-- Javascript translation -->
	<span n:render="i18n" id="js_adb_save" class="adb js_str">Save</span>
	<span n:render="i18n" id="js_adb_edit" class="adb js_str">Edit</span>
</div>
